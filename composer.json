        "simplesamlphp/saml2": "dev-master"
    },
    "require-dev": {
        "mockery/mockery": "~1.2",
        "phpunit/phpunit": "^8.5",
        "simplesamlphp/simplesamlphp-test-framework": "~0.1.2",
        "sensiolabs/security-checker": "~6.0",
        "sebastian/phpcpd": "~4.1",
        "squizlabs/php_codesniffer": "~3.5",
        "vimeo/psalm": "~3.8"
    },
    "autoload": {
        "psr-4": {
            "SPID\\": "src/SPID"
        }
    },
    "autoload-dev": {
